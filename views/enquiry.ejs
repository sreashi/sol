<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Enquiry</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
</head>
<body>
  <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
    <ul class="navbar-nav">
      <li class="nav-item active">
        <a class="nav-link" >Online Class</a>
      </li>
        </ul>
  </nav>
    <div class="container p-5">
        <h1 class="text-center mb-5 text-uppercase text-muted">Online Tutorial</h1>
                <form action="enquiry" method="POST" novalidate>
                        <div class="form-group">
                          <label for="_rname">Name</label>
                          <input type="text" name="user_name" id="_rname" class="form-control" placeholder="Name" value="<%= (locals.old_data) ? old_data.user_name : ''; %>" required>
                        </div>
                        <div class="form-group">
                          <label for="_remail">Email</label>
                          <input type="email" name="user_email" id="_remail" class="form-control" placeholder="Email" value="<%= (locals.old_data) ? old_data.user_email : ''; %>" required>
                        </div>
                       
                        <div class="form-group">
                          <label for="_rdate">Date</label>
                          <input type="date" name="user_date" id="_rdate" class="form-control" placeholder="Date" value="<%= (locals.old_data) ? old_data.user_date : ''; %>" required>
                        </div>
                        <div class="form-group">
                          <label for="_rfname">Father's Name</label>
                          <input type="text" name="f_name" id="_rfname" class="form-control" placeholder="Father's Name" value="<%= (locals.old_data) ? old_data.user_fname : ''; %>" required>
                        </div>
                        <div class="form-group">
                          <label for="_rmname">Mother's Name</label>
                          <input type="text" name="m_name" id="_rmname" class="form-control" placeholder="Mother's Name" value="<%= (locals.old_data) ? old_data.user_mname : ''; %>" required>
                          </form>  
                          <div class="form-group">
                          <label for="_rladd">Residential Address</label>
                          <input type="text" name="user_radd" id="_rladd" class="form-control" placeholder="Local Address" value="<%= (locals.old_data) ? old_data.user_ladd : ''; %>" required>
                        </div>
                        <div class="form-group">
                            <label for="_roadd"> Office Address </label>
                            <input type="text" name="user_oadd" id="_roadd" class="form-control" placeholder="Office Address" value="<%= (locals.old_data) ? old_data.user_oadd : ''; %>" required>
                          </div>
                        <div class="form-group">
                          <label for="_rrph">Residential Phone Number</label>
                          <input type="number" name="user_phr" id="_rrph" class="form-control" placeholder="residential phone number" value="<%= (locals.old_data) ? old_data.user_phr : ''; %>" required>
                        </div>
                        <div class="form-group">
                            <label for="_roph">Office Phone Number</label>
                            <input type="number" name="user_pho" id="_roph" class="form-control" placeholder="office phone number" value="<%= (locals.old_data) ? old_data.user_pho : ''; %>" required>
                          </div>
                          <div class="form-group">
                            <label for="_rlcn">Local Guaridian Name</label>
                            <input type="text" name="user_lcn" id="_rlcn" class="form-control" placeholder="local guaridian name" value="<%= (locals.old_data) ? old_data.user_lcn : ''; %>" required>
                          </div>
                          <div class="form-group">
                            <label for="_rlca">Local Guaridian Address</label>
                            <input type="text" name="user_lca" id="_rlca" class="form-control" placeholder="local guaridian address" value="<%= (locals.old_data) ? old_data.user_lca : ''; %>" required>
                          </div>
                          <div class="form-group">
                            <label for="_rna"> Nationality </label>
                            <input type="text" name="user_na" id="_rna" class="form-control" placeholder="nationality" value="<%= (locals.old_data) ? old_data.user_rna : ''; %>" required>
                          </div>
                          <div class="form-group">
                            <label for="_rrel"> Religion</label>
                            <input type="text" name="user_rel" id="_rrel" class="form-control" placeholder="religion" value="<%= (locals.old_data) ? old_data.user_rel : ''; %>" required>
                          </div>
                          <div class="form-group">
                            <label for="_rclass"> Enter Your Class </label>
                            <input type="number" name="user_class" id="_rclass" class="form-control" placeholder="class" value="<%= (locals.old_data) ? old_data.user_class : ''; %>" required>
                          </div>
                          <div class="form-group">
                            <label for="_rfocc">Father Occupation</label>
                            <input type="text" name="f_occ" id="_rmocc" class="form-control" placeholder="mother_occupation" value="<%= (locals.old_data) ? old_data.f_occ : ''; %>" required>                        
                        </div>
                        <div class="form-group">
                            <label for="_rmocc">Mother Occupation</label>
                            <input type="text" name="m_occ" id="_rmocc" class="form-control" placeholder="mother_occupation" value="<%= (locals.old_data) ? old_data.m_occ : ''; %>" required>                        
                        </div>
                        <% if (locals.enquiry_error) { 
                            enquiry_error.forEach(function(error_msg){ %>
                          <div class="alert alert-danger" role="alert"><%= error_msg %></div>
                        <% });
                        } %>
                        <button type="submit" class="btn btn-success">Submit</button>
                    </form>

            </div>
        </div>
    </div>
</body>
</html>